<%= form_with model: product, html: { class: "custom-form" } do |form| %>
  <div class="form-group custom-name">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control custom-input" %>
  </div>
  
  <div class="form-group custom-description">
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description, class: "form-control custom-textarea" %>
  </div>
  
  <div class="form-group custom-image">
    <%= form.label :featured_image, style: "display: block" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control-file custom-file" %>
  </div>
  
  <div class="form-group custom-inventory">
    <%= form.label :inventory_count, style: "display: block" %>
    <%= form.number_field :inventory_count, class: "form-control custom-number" %>
  </div>
  
  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary custom-submit" %>
  </div>
<% end %>
