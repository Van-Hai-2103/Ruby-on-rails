<h1 class="page-title"><%= t ".title" %></h1>

<div class="header-actions">
  <% if authenticated? %>
    <%= link_to "New product", new_product_path, class: "btn new-product-btn" %>
  <% else %>
    <%= link_to "Login", new_session_path, class: "btn login-btn" %>
  <% end %>
</div>

<div id="products" class="product-list">
  <% @products.each do |product| %>
    <div class="product-item">
      <%= link_to product.name, product, class: "product-link" %>
    </div>
  <% end %>
</div>
